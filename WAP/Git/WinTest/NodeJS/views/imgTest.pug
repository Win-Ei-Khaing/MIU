mixin thumbnail(imageName, caption)
    div.thumbnail 
        img(src= "/img/"+imgName+".jpeg")
        h4.image-caption= caption

div 
    p Hello World, I'm Win
    +thumbnail("happy", "I'm happy now")
    p end thumbnail
    p hello, #{imgName}
    img(src= "/img/"+imgName+".jpeg")
- var profileName = "Danny Ocean";
div
    p Hi there, #{profileName}. How are you doing?