package lesson9.labs.prob10a;

import java.util.*;

public class Or {

	public static void main(String[] args) {
		List<Simple> list = Arrays.asList(new Simple(false), new Simple(false), new Simple(true));

	}
	
	public boolean someSimpleIsTrue(List<Simple> list) {
		Simple accum = new Simple(false);
		
		System.out.println(list.stream().reduce(accum, (Simple a,Simple b)->(a.flag||b.flag) ? a : null));
		/*for(Simple s: list) {
			accum = accum || s.flag;
		}*/
		return accum.flag;
	}

}
