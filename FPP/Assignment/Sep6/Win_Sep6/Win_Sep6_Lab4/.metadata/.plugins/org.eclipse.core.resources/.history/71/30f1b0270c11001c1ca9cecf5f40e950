package lab4_5.closedcurve.good;

import lab4_4.closedcurve.good.Polygon;
import lab4_4.closedcurve.good.Rectangle;
import lab4_4.closedcurve.good.Square;
import lab4_4.closedcurve.good.Triangle;

public class Test3 {
	public static void main(String[] args) {
		Polygon[] objects = {new Square(3),
				new Triangle(4,5,6),
				new Rectangle(3,4)};
		//compute areas
		for(Polygon pg : objects) {
			System.out.println("For this "+pg.getClass().getSimpleName()+
					" \n  Number of sides = "+pg.getNumberOfSides()+
					" \n  Perameter = "+pg.computePerimeter());			
		}
	}
}
