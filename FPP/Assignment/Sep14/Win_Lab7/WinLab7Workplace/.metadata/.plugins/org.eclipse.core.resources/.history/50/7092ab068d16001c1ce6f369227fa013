package prog7_2;

public class MinSort {

	public static void main(String[] args) {
		MinSort ms=new MinSort();
		String result = ms.sort("edcba");//
		System.out.println(result);
	}

	private String sort(String s) {
		StringBuilder sb = new StringBuilder();
		if(s==null || s=="") return null;
		for(int i=0;i<s.length();i++) {
			char minChar=minChar(s);
			int minpos=s.indexOf(minChar);
			
			char temp=s.charAt(i);
			sb.setCharAt(i, minChar);
			sb.setCharAt(minpos, temp);
			
			s=s.substring(i);
			sb.append(minChar);
		}
		
		
		return sb.toString();
	}
	char minChar(String s) {
		char ch=s.charAt(0);
		if(s.length()==1) return ch;
		char c=minChar(s.substring(1));
		return (ch<c)?ch:c;
	}
	

}
